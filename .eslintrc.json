{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".vue"]
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "vue/multi-word-component-names": "off",
        "indent": ["error", 2],
        "quotes": ["error", "double"]
    },
    "globals": {
        "$nuxt": true
    }
}
