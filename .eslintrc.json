{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "plugin:prettier-vue/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".vue"]
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "vue/multi-word-component-names": "off",
        "prettier-vue/prettier": [
            "warn",
            {
                "printWidth": 120,
                "tabWidth": 2,
                "semi": false,
                "singleQuote": false,
                "trailingComma": "none",
                "bracketSameLine": true,
                "vueIndentScriptAndStyle": false,
                "quoteProps": "consistent"
            }
        ],
        "indent": ["error", 2],
        "quotes": ["error", "double"]
    },
    "globals": {
        "$nuxt": true
    }
}
